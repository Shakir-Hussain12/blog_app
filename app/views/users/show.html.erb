<h1>Details of <%= myuser.name %></h1>
<%= render partial: 'list', object: myuser, as: :user %>
<div class="bio">
    <h1>Bio</h1>
    <p><%= myuser.bio %></p>
</div>

<h2 style="text-align: center;margin: 5% auto 0 auto;">Recent Posts</h2>
<ul class="posts-container">
    <% posts = myuser.recent_posts(3) %>
    <%= render partial: 'show', collection: posts, as: :post, user: myuser %>
    <div class="buttons">
        <%= button_to 'Add a post', new_user_post_path(myuser.id), method: :get %>
        <%= button_to 'See All posts', user_posts_path(myuser.id), method: :get %>
    </div>
</ul>