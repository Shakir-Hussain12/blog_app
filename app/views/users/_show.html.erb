<%= link_to user_post_path(@user.id, post.id) do %>
    <li class="post-item">
        <h3>Post#<%= post.id %></h3>
        <div class="inner-items">
            <p><%= post.text %></p>
            <p class="item-no">Comments: <%= post.comments_count == nil ? 0 : post.comments_count %>, Likes: <%= post.likes_count == nil ? 0 : post.likes_count %></p>
        </div>
    </li>
<% end %>